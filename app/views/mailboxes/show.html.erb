<h1><%= @mailbox.name %></h1>
<table class="table table-striped">
  <tr>
    <th></th>
    <th>Date</th>
    <th>Caller</th>
    <th></th>
  </tr>
  <% @messages.each do |message| %>
  <tr>
    <td><%= message_badge(message) %></td>
    <td><%= to_pst(message.created_at) %></td>
    <td><%= caller_name(message) %></td>
    <td>
        <audio controls>
            <source src="<%= message.url %>" type="audio/mp3" />
            Your browser does not support the audio tag. <a href="<%= message.url %>">Listen</a>
        </audio>
    </td>
  </tr>
  <% end %>
</table>

